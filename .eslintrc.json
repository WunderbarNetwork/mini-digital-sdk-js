{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard-with-typescript", "eslint:recommended", "eslint-config-prettier", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "tsconfig.eslint.json"
  },
  "plugins": ["prettier", "vitest"],
  "rules": {
    "prettier/prettier": ["warn"]
  }
}
